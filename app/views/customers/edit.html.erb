<h1>Editing customer</h1>

<%= form_for(@customer) do |f| %>

  <div class="field">
    <%= f.label :Club %>
    <%= collection_select :customer, :club_id, Club.all, :id, :ClubName %>
  </div>

  <div class="field">
    <%= f.label :ContactInfo %>
    <%= collection_select :customer, :contact_info_id, ContactInfo.all, :id, :full_name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h3>Add an Entry:</h3>
<%= render "entries/form" %>

