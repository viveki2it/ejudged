<h1>Listing Judge Sheets</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @judge_sheets.each do |judge_sheet| %>
  <tr>
    <td><%= truncate(judge_sheet.Name, :lenght => 15) %></td>
    <td><%= link_to 'Show', judge_sheet %></td>
    <td><%= link_to 'Edit', edit_judge_sheet_path(judge_sheet) %></td>
    <td><%= link_to 'Destroy', judge_sheet, :method => :delete, :data => { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />

<%= paginate @judge_sheets %>
<br/>

