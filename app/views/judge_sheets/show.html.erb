<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @judge_sheet.Name %>
</p>

<h3>Questions:</h3>
<table>
	<tr>
		  <td><b>Question Text:</b></td>
    	<td><b>Minval:</b></td>
    	<td><b>Maxval:</b></td>
    	<td><b>Questiondescrip:</b></td>
      <td><b>Question Link:</b></td>
	</tr>
<% @judge_sheet.questions.each do |question| %>
	<tr>
		<td><%= question.QuestionText%></td>
		<td><%= question.MinVal%></td>
		<td><%= question.MaxVal%></td>
		<td><%= truncate(question.QuestionDescrip, :lenght => 15)%></td>
    <td><%= link_to "Question Details", question%>
	</tr>
<% end %>
</table>
<br/>

<h3>Contests:</h3>
<table>
  <tr>
    <td><b>Contest Name:</b></td>
    <td><b>Contest Link:</b></td>
  </tr>
<% @judge_sheet.contests.each do |contest| %>
  <tr>
    <td><%= truncate(contest.ContestName, :lenght => 15)%></td>
    <td><%= link_to "Contest Details", contest %></td>
  </tr>
<% end %>
</table>
<br/>

<%= link_to 'Edit', edit_judge_sheet_path(@judge_sheet) %> |
<%= link_to 'Back', judge_sheets_path %>
