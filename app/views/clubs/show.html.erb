<p id="notice"><%= notice %></p>

<p>
  <b>Clubname:</b>
  <%= @club.ClubName %>
</p>

<h3>Customers:</h3>
<table>
	<tr>
		<td><b>First and Last Name:</b></td>
    <td><b>Link to Customer:</b></td>
	</tr>
<% @club.customers.each do |customer| %>
	<tr>
    <%if not customer.contact_info.nil?%>
		  <td><%= customer.contact_info.FirstName + " " + customer.contact_info.LastName%></td>
    <%else%>
      <td>Unassigned Contact Info for Customer ID:<%= customer.id %></td>
    <%end%>
    <td><%= link_to "Customer Details", customer%>
	</tr>
<% end %>
</table>
<br/>

<h3>Entries:</h3>
<table>
   <tr>
    <td><b>Registration Number:</b></td>
    <td><b>Entry Type:</b></td>
    <td><b>Make:</b></td>
    <td><b>Model:</b></td>
    <td><b>Year:</b></td>
    <td><b>Entry Link:</b></td>
  </tr>
<% @club.entries.each do |entry| %>
  <tr>
    <td><%= entry.RegistrationNumber%></td>
    <td><%= entry.RegistrationType%></td>
    <td><%= entry.Make%></td>
    <td><%= entry.Model%></td>
    <td><%= entry.Year%></td>
    <td><%= link_to "Entry Details", entry%>
  </tr>
<% end %>
</table>
<br/>

<%= link_to 'Edit', edit_club_path(@club) %> |
<%= link_to 'Back', clubs_path %>
<br/>
